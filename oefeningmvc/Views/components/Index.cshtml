@model IEnumerable<OefeningMVC.Models.component>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Voeg nieuwe toe", "Create")
</p>
<p>
    Klik op de kolomhoofden om te sorteren.
</p>
<table class="table">
    <tr>
        <th class="col-lg-2 col-md-4 col-sm-6">
            @Html.ActionLink("naam", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th  class="col-lg-2 col-md-4 col-sm-6">
            @Html.ActionLink("categorie", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th  class="col-lg-2 col-md-4 col-sm-6">
            @Html.DisplayNameFor(model => model.Link)
        </th>
        <th  class="col-lg-2 col-md-4 col-sm-6">
            @Html.ActionLink("aantal", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th  class="col-lg-2 col-md-4 col-sm-6">
            @Html.ActionLink("aankoopprijs", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th class="col-lg-2 col-md-4 col-sm-6"></th>
    </tr>
