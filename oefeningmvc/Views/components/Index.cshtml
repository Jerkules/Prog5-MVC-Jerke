    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.aantal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aankoopprijs)
            </td>
            <td>
                @Html.ActionLink("Pas aan", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Verwijder", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
